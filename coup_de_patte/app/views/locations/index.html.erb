<h1>Listing Locations</h1>

<table class="table table-striped table-hover table-bordered table-responsive">
  <thead>
    <tr>
      <th>Date</th>
      <th>Dur√©e (jours)</th>
      <th>Animal</th>
      <th>Paysan</th>
      <th>Status de location</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.date %></td>
        <td><%= location.dureeJour %></td>
        <td><%= link_to location.animal.nom, animal_path(location.animal) %></td>
        <td><%= location.user.full_name %></td>
        <td><%= location.status_location.nom %></td>
        <td>
          <%= link_to 'Show', location, :class => 'btn btn-sm btn-default' %>
          <%= link_to 'Edit', edit_location_path(location), :class => 'btn btn-sm btn-default' %>
          <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

