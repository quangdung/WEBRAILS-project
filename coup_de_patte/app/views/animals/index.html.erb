<% content_for :actions_specifiques do %>
    <%= render :partial => "actions_specifiques", :locals => {:action => "index" } %>
<% end %>

<!--<p id="notice"><%= notice %></p>-->

<h1>Liste des animaux</h1>

<table class="table table-striped table-hover table-bordered table-responsive">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Status</th>
      <th>Prix journalier</th>
      <th>Ferme</th>
      <th>Espece</th>
      <th>Taches possibles</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <%= render :partial => "animal", :locals => {:animal => animal, :printFarm => true, :printRemoveFarm => false} %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :manage, Animal %>
    <%= link_to 'Nouvel animal', new_animal_path %>
<% end %>